generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model News {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String?
  link        String    @unique
  rssUrl      String
  pubDate     DateTime?
  description String?
  thumbnail   String?
  createdAt   DateTime  @default(now())
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LineItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  size      String
  min_cpm   Float
  max_cpm   Float
  geo       String
  adType    String
  frequency Int
  fileName  String
  createdAt DateTime @default(now())
}
